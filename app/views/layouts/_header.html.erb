<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Happy Eats", root_path, id: "logo" %>
    <div class="row">
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li class="search_tag"><%= form_tag(search_path, :method => "get",
                           class: 'navbar-form navbar-left') do %>
              <div class="input-group">
                <%= search_field_tag :search, params[:search], placeholder: t('header.search_placeholder'), class: "form-control" %>
                <div class="input-group-btn">
                  <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
                </div>
              </div>
            <% end %>
          </li>
          <li></li>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" id="account_menu" data-toggle="dropdown"><%=t('header.account')%><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Orders"%></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('header.sign_in'), login_path, id: "signin" %></li>
          <% end %>
          <%if isCartAvailable? %>
          <li>
            <%= link_to "Cart", cart_path(@current_cart), id: "signin" %>
          </li>
          <%end %>
        </ul>
      </nav>
    </div>
  </div>
</header>


